.content {
  border: 1px solid #ECEBEC;
  width: 740rpx;
  height: 300rpx;
  margin: 10rpx 5rpx;
  display: flex;
  flex-direction: row;
}
.content .left {
  background-color: #B5B5A9;
  width: 280rpx;
  height: 280rpx;
  margin-left: 5rpx;
  margin-top: 10rpx;
}
.content .left image {
  width: 280rpx;
  height: 280rpx;
}
.content .right {
  width: 440rpx;
  height: 280rpx;
  margin: 10rpx 5rpx;
  line-height: 70rpx;
  font-size: 35rpx;
  font-family: 'Microsoft Yahei';
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.content .right view {
  margin-left: 25rpx;
  width: 390rpx;
  height: 70rpx;
}
.content .right .peopleNum {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.content .right .btn {
  display: flex;
  flex-direction: row-reverse;
}
.content .right .btn text {
  background-color: #0DD5F7;
}

